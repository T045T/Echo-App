<UserControl x:Class="Echo.Views.WelcomePage2View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="607" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Height="607">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Width="440" FontSize="24" Text="Great! Now let's fill that address book of yours!" Margin="12"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Width="440" FontSize="32" Text="Do you want to import your Windows Phone contacts into Echo?" Margin="12,48,12,12"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,24">
            <Button x:Name="importBtn" Command="{Binding ImportFromPhonebook}" Content="yes" Width="228"/>
            <Button x:Name="dontImportBtn" Command="{Binding DontImport}"  Content="no thanks" HorizontalAlignment="Right" Width="228"/>
        </StackPanel>
    </Grid>
</UserControl>
