<UserControl x:Class="Echo.Views.WelcomePage3View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="456" Height="607">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Width="440" FontSize="24" Margin="12"><Run Text="All right, that's it!"/><LineBreak/><Run/><LineBreak/><Run Text="Now you're ready to begin using Echo. Swipe around the home screen to reach your contacts, recent calls and the speech trainer."/><LineBreak/><Run/><LineBreak/><Run Text="I'm sure you can take it from here - hav"/><Run Text="e"/><Run Text=" fun!"/></TextBlock>
            <Button x:Name="goBtn" Content="go!" Command="{Binding Finish}" Width="456" Margin="0,12,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
